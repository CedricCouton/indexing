#!/bin/bash

export PATH=$PATH:~/bin
export WORKSPACE="/opt/build"

rm -rf ~/.ciscripts
git clone -q git://github.com/couchbase/indexing ~/.ciscripts

while true; do
  cd ~/.ciscripts
  git pull -q
  find secondary/tests/ci/scripts -not -name 'build' -and -not -name '.*' -type f -exec cp -v {} ~/bin/ \;
  domain
  sleep 600
done

