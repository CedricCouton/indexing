#!/bin/bash

export PATH=$PATH:~/bin
export WORKSPACE="/opt/build"
shopt -s extglob

rm -rf ~/.ciscripts
git clone -q git://github.com/couchbase/indexing ~/.ciscripts

while true; do
  domain
  cd ~/.ciscripts
  git pull -q
  GLOBIGNORE='build' cp -r secondary/tests/ci/scripts/* ~/bin/
  sleep 600
done

